model Branch {
  id           Int         @id @default(autoincrement())
  franchisee   Franchisee? @relation(fields: [franchiseeId], references: [id])
  franchiseeId Int
  location     String
  size         Float
  machines     Machine[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Franchisee {
  id          Int      @id @default(autoincrement())
  name        String
  phoneNumber String
  branches    Branch[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Machine {
  id                     Int             @id @default(autoincrement())
  type                   MachineTypeEnum
  size                   Float
  brand                  String
  model                  String
  mfd                    DateTime
  warrantyExpirationDate DateTime
  branch                 Branch?         @relation(fields: [branchId], references: [id])
  branchId               Int
  modes                  Mode[]
  maintenances           Maintenance[]
  usages                 Usage[]
  createdAt              DateTime        @default(now())
  updatedAt              DateTime        @updatedAt
}

enum MachineTypeEnum {
  WASHER_FRONT
  WASHER_TOP
  DRYER
}

model Mode {
  id        Int       @id @default(autoincrement())
  mode      ModeEnum
  duration  Int
  weight    Int
  price     Float
  machines  Machine[]
  usages    Usage[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Maintenance {
  id          Int          @id @default(autoincrement())
  level       Level        @relation(fields: [levelId], references: [id])
  levelId     Int
  cause       String
  technicians technician[]
  machine     Machine?     @relation(fields: [machineId], references: [id])
  machineId   Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Level {
  id           Int           @id @default(autoincrement())
  level        String
  maintenances Maintenance[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model technician {
  id          Int           @id @default(autoincrement())
  name        String
  phoneNumber String
  joinDate    DateTime
  maintenance Maintenance[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum ModeEnum {
  QUICK_WASH
  DELICATE_WASH
  COLD_WASH
  WARM_WASH
  HOT_WASH
  SOFT_WASH
  HEAVY_WASH
  WOOL
  COLD_DRY
  WARM_DRY
  HOT_DRY
  CLEAN
}

model User {
  id              Int             @id @default(autoincrement())
  name            String
  phoneNumber     String
  balance         Float
  refillHistories refillHistory[]
  usages          Usage[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Usage {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  machine    Machine  @relation(fields: [machineId], references: [id])
  machineId  Int
  mode       Mode     @relation(fields: [modeId], references: [id])
  modeId     Int
  price      Float
  startTime  DateTime
  finishTime DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model refillHistory {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
